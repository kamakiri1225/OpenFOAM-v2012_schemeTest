FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    // div(phi,T) Gauss upwind grad(T);
    div(phi,T) Gauss zoneBlended
    {
        default         upwind grad(T);
        linearUpwindFaceZone  linearUpwind grad(T);
        upwindFaceZoneSet  upwind grad(T);
    };
}

laplacianSchemes
{
    default         none;
    laplacian(DT,T) Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}


